{
  "name": "giat",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
      "lint:sass": "sass-lint -c .sass-lint.yml -v",
      "presass": "npm-run-all lint:sass",
      "sass": "node-sass --source-map true --include-path app/sass --include-path node_modules app/sass/main.scss app/styles/bundle.css",
      "postsass": "postcss -c postcss.config.json",
      "server:dev": "babel-node tools/runBrowserSync.js",
      "watch": "nodemon -w app/sass -e scss -x \"npm run sass\"",
      "test": "echo \"Error: no test specified\" && exit 1",
      "start": "npm-run-all --parallel server:dev watch"
  },

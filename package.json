  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "browser-sync": "^2.18.8",
    "cssnano": "^3.10.0",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "normalize.css": "^6.0.0",
    "npm-run-all": "^4.0.2",
    "postcss-cli": "^2.6.0",
    "rimraf": "^2.6.1",
    "sass-lint": "^1.10.2"
  },
